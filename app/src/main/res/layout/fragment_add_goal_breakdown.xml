<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addgoal.fragment.AddGoalBreakdownFragment">

    <!--  AppBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_bar_add_goal_title"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Header Text -->
    <TextView
        android:id="@+id/addGoal_breakdown_tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/goal_breakdown_header_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_app_bar" />

    <!-- Chosen Image -->
    <ImageView
        android:id="@+id/goal_breakdown_image_chosen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/chosen_image_description"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addGoal_breakdown_tv_header"
        tools:src="@drawable/money_background" />

    <!-- Label Name -->
    <TextView
        android:id="@+id/goal_breakdown_tv_item_label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/goal_item_name_label"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_breakdown_image_chosen" />

    <!-- Item Name -->
    <TextView
        android:id="@+id/goal_breakdown_tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:maxLines="3"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/goal_breakdown_tv_item_label_name"
        app:layout_constraintStart_toStartOf="@+id/goal_breakdown_tv_item_label_name"
        app:layout_constraintTop_toBottomOf="@+id/goal_breakdown_tv_item_label_name"
        tools:text="@string/goal_item_name_text" />

    <!-- Label Price -->
    <TextView
        android:id="@+id/goal_breakdown_tv_item_label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/goal_item_price_label"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_breakdown_tv_item_name" />

    <!-- Item Price -->
    <TextView
        android:id="@+id/goal_breakdown_tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/goal_breakdown_tv_item_label_price"
        app:layout_constraintTop_toBottomOf="@+id/goal_breakdown_tv_item_name"
        tools:text="@string/goal_item_price_text" />

    <!-- Label Date Started -->
    <TextView
        android:id="@+id/goal_breakdown_tv_label_date_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/goal_breakdown_date_started_label"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_breakdown_tv_item_label_price" />

    <!-- Date Started -->
    <TextView
        android:id="@+id/goal_breakdown_tv_date_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/goal_breakdown_tv_label_date_started"
        app:layout_constraintTop_toTopOf="@+id/goal_breakdown_tv_label_date_started"
        tools:text="@string/goal_breakdown_date_started_text" />

    <!-- Label Date Finish -->
    <TextView
        android:id="@+id/goal_breakdown_tv_label_date_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/goal_breakdown_date_finished_label"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_breakdown_tv_label_date_started" />

    <!-- Date Finish -->
    <TextView
        android:id="@+id/goal_breakdown_tv_date_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/goal_breakdown_tv_label_date_finish"
        app:layout_constraintTop_toTopOf="@+id/goal_breakdown_tv_label_date_finish"
        tools:text="@string/goal_breakdown_date_finished_text" />

    <!-- Label Daily Saving Amount -->
    <TextView
        android:id="@+id/goal_breakdown_tv_label_daily_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/goal_breakdown_daily_saving_label"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goal_breakdown_tv_label_date_finish" />

    <!-- Daily Saving Amount -->
    <TextView
        android:id="@+id/goal_breakdown_tv_daily_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/goal_breakdown_tv_label_daily_saving"
        app:layout_constraintTop_toTopOf="@+id/goal_breakdown_tv_label_daily_saving"
        tools:text="@string/goal_breakdown_daily_saving_text" />

    <!-- Button Get Back -->
    <TextView
        android:id="@+id/goal_breakdown_btn_start_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner_button_primary"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="@string/goal_breakdown_start_saving"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Next Steps -->
    <TextView
        android:id="@+id/goal_breakdown_btn_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner_button_primary"
        android:padding="12dp"
        android:text="@string/goal_period_go_back"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>